@section Scripts{
<script>
    var submitUrl = "";
    $("#behaviouralCompetencyBtn").click(function () {
        submitUrl = "/BehaviouralCompetency/BehaviouralCompetencyDefinition";
    })
    $('#tagEditorCompetency').tagEditor({
        placeholder: 'آیتم های مورد نظر را تایپ نمایید',
        maxLength: [1000],
        clickDelete: true
        //beforeTagDelete: function (field, editor, tags, val) {
        //    var q = confirm('Remove tag "' + val + '"?');
        //    if (q) $('#response').prepend('Tag ' + val + ' deleted.');
        //    else $('#response').prepend('Removal of ' + val + ' discarded.');
        //    return q;
        //}
    });
    $('.select2').select2({
        placeholder: "انتخاب کنید",
        allowClear: true
    });
    $("#BehaviouralCompetencyFrm").submit(function (e) {
        //alert('dpCreationSubmit');
        //var postdata2 = $(this).serializeArray();
        //debugger;
        var form = $('#BehaviouralCompetencyFrm');
        form.validate({
            //console.log($('#registerform').serializeArray());
            errorElement: 'span', //default input error message container
            errorClass: 'help-block', // default input error message class
            focusInvalid: false, // do not focus the last invalid input
            ignore: "",
            rules: {
                tagEditorCompetency: {
                    required: true
                },
                title: {
                    required: true
                },
                job: {
                    required: true
                }
            },
            messages: {
                tagEditorCompetency: {
                    required: "پر کردن این فیلد الزامی می باشد"
                },
                title: {
                    required: "پر کردن این فیلد الزامی می باشد"
                },
                job: {
                    required: "پر کردن این فیلد الزامی می باشد"
                }
            },
            invalidHandler: function (event, validator) { //display error alert on form submit
                //                    success2.hide();
                //                    error2.show();
                //                    App.scrollTo(error2, -200);
            },
            errorPlacement: function (error, element) { // render error placement for each input type
                var icon = $(element).parent('.input-icon').children('i');
                icon.removeClass('fa-check').addClass("fa-warning");
                icon.attr("data-original-title", error.text()).tooltip();
            },
            highlight: function (element) { // hightlight error inputs
                $(element)
                    .closest('.form-group').addClass('has-error'); // set error class to the control group
            },

            unhighlight: function (element) { // revert the change done by hightlight

            },

            success: function (label, element) {
                var icon = $(element).parent('.input-icon').children('i');
                $(element).closest('.form-group').removeClass('has-error').addClass('has-success'); // set success class to the control group
                icon.removeClass("fa-warning").addClass("fa-check");
            },

            submitHandler: function (form) {
                //                    success2.show();
                //                    error2.hide();
            }
        })
        if (form.valid() == false) {
            //console.log($('#registerform').serializeArray());
            return false;
        } else {
            //$("#articleSubmit").addClass('disabled');
            $("#Behaviouralbtn").attr("disabled", "disabled");
            var btn = $("#Behaviouralbtn");
            btn.button('loading');
            var postdata = new FormData(this);
            //var postdata = $('#dpcreation').serializeArray();

            console.log(postdata);
            $.ajax(
                {
                    //data:postdata,
                    url: submitUrl,
                    //url : formURL,
                    //data: postdata2,
                    data: postdata,
                    //data: "firstName=" + $("fn").val(),
                    cache: false,
                    contentType: false,
                    processData: false,
                    type: "post",

                    success: function (data, textStatus, jqXHR) {
                        //if ($.trim(data) === "yess")
                        //alert("That's one I wanted. Excellent")
                        //alert(data);
                        var message = ""
                        if (data > 0) {
                            message += "<span>اطلاعات  مورد نظر با موفقیت ثبت گردید</span><br><br>";
                            toastr.options.timeOut = "15000";
                            toastr.options.positionClass = "toast-top-center";
                            toastr.success(message);
                        }
                        else if (data == 0) {
                            message += "<span>اطلاعات  مورد نظر ثبت نگردید..</span><br><br>";
                            toastr.options.timeOut = "15000";
                            toastr.options.positionClass = "toast-top-center";
                            toastr.info(message);
                        }
                        $("#BehaviouralCompetencyFrm")[0].reset();
                        resetFormValidation();
                        $("#BehaviouralCompetency").modal("hide");
                        //$("#periodDefinitionTable").DataTable().destroy();
                        //show_dataTable();
                        //dt.ajax.url("/BehaviouralCompetency/GetBehaviouralList");
                        dt.ajax.reload();
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert("erorr00000");
                        alert(jqXHR);
                        alert(textStatus);
                    }
                }).always(function () {
                    $("#Behaviouralbtn").button('reset');
                });
            //$.getScript('/assets/javascript/articleForm.js', function () {
            //    ArticleForm.init(postdata);
            //    $("#articleForm")[0].reset();
            //});
            e.preventDefault(e);
        }
    });
    $.ajax({
        type: 'get',
        url: '/BehaviouralCompetency/GetJobList',
        //data: { roleId: roleId },
        success: function (data) {
            $("#job").empty();
            $("#job").append("<option></option>");

            $(data).each(function (i, d) {
                //$("#parentName").select2("val", d.departmentId);
                $("#job").append("<option value='" + d.jobId + "'>" + d.title + "</option>");
            })
        },
        error: function (status) {
            alert("Error");
        }
    })

    function resetFormValidation() {
        //$(".select2-chosen").html("");
        //Begin of reset form validation
        $(".input-icon .fa-warning").addClass('fa').removeClass('fa-warning');
        $(".input-icon .fa-check").addClass('fa').removeClass('fa-check');
        $(".alert-danger").hide();
        $('.form-group').removeClass('has-error');
        $('.form-group').removeClass('has-success');
        //End of reset form validation
    }

    $('#BehaviouralCompetency').on('hidden.bs.modal', function () {
        $("#BehaviouralCompetencyFrm")[0].reset();
        $(".select2-search-choice").remove();

        $(".tag-editor-delete > i").each(function () {
            $(this).click();
        });
        resetFormValidation();
    });
    function format(d) {
        var r;
        $.ajax({
            url: "/BehaviouralCompetency/GetTruthDetails",
            type: "POST",
            data: { behaviouralCompetencyId: d.BehaviouralCompetencyId },
            async: false,
            dataType: "html",
            success: function (result) {
                r = result;
            }
        });
        return r;
    }
    var dt;
    function show_dataTable() {
        dt = $('#behaviourTbl').DataTable({
            dom: 'CT<"clearfix">lBfrtip',
            buttons: [
                'copy', 'csv', 'excel',
                'pdf',
                {
                    extend: 'pdfHtml5',
                    download: 'open',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'print',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                'colvis'
            ],
            columnDefs: [
                {
                    targets: [-1],
                    visible: false
                }
            ],
            //                "fnInitComplete": function (oSettings, json) {
            //
            //                },
            "fnDrawCallback": function (oSettings) {
                $(".editCompetencyBtn").click(function () {
                    submitUrl = "/BehaviouralCompetency/EditBehaviouralCompetency";
                    var tr = $(this).closest('tr');
                    var row = dt.row(tr);
                    $("#behaviouralCompetencyId").val(row.data().BehaviouralCompetencyId);
                    $("#title").val(row.data().Title);
                    var tags = [];
                    $.ajax({
                        url: "/BehaviouralCompetency/GetTruthDetails2",
                        type: "POST",
                        data: { behaviouralCompetencyId: row.data().BehaviouralCompetencyId },
                        async: false,
                        dataType: "json",
                        success: function (result) {
                            $(result).each(function (i, d) {
                                //$("#parentName").select2("val", d.departmentId);
                                tags.push(d.title);
                            })
                        }
                    });
                    $('#tagEditorCompetency').tagEditor('destroy');
                    $('#tagEditorCompetency').tagEditor({
                        initialTags: tags,
                        maxLength: [1000],
                        clickDelete: true,
                        placeholder: 'آیتم های مورد نظر را تایپ نمایید',
                    });
                    $("#job").select2("val", row.data().jobId.split(','));
                });
                $(".deleteCompetencyBtn").click(function () {
                    var tr3 = $(this).closest('tr');
                    var row3 = dt.row(tr3);
                    $.ajax(
                        {
                            url: "/BehaviouralCompetency/BehaviouralCompetencyDeletion",
                            contentType: 'aplication/json;charset=utf-8',
                            type: "GET",
                            datatype: 'html',
                            data: {
                                behaviouralCompetencyId: row3.data().BehaviouralCompetencyId,
                                title: row3.data().Title
                            },
                            success: function (data, textStatus, jqXHR) {
                                $("#modalPlace").html(data);
                            },
                            error: function (jqXHR, textStatus, errorThrown) {
                                alert("erorr");
                                alert(jqXHR);
                                alert(textStatus);
                            }
                        });
                });
                // Array to track the ids of the details displayed rows
                var detailRows = [];
                $('.details-control').on('click', function () {
                    var tr = $(this).closest('tr');
                    var row = dt.row(tr);
                    var idx = $.inArray(tr.attr('id'), detailRows);

                    if (row.child.isShown()) {
                        tr.removeClass('details');
                        row.child.hide();

                        // Remove from the 'open' array
                        detailRows.splice(idx, 1);
                    }
                    else {
                        tr.addClass('details');
                        row.child(format(row.data())).show();

                        // Add to the 'open' array
                        if (idx === -1) {
                            detailRows.push(tr.attr('id'));
                        }
                    }
                });
                // On each draw, loop over the `detailRows` array and show any child rows
                dt.on('draw', function () {
                    $.each(detailRows, function (i, id) {
                        $('#' + id + ' td.details-control').trigger('click');
                    });
                });

                $(".activationCompetencyBtn").click(function () {
                    var tr = $(this).closest('tr');
                    var row = dt.row(tr);
                    $.ajax(
                        {
                            url: "/BehaviouralCompetency/ActivationCompetencyDefinition",
                            contentType: 'aplication/json;charset=utf-8',
                            type: "GET",
                            datatype: 'html',
                            data: {
                                behaviouralCompetencyId: row.data().BehaviouralCompetencyId
                                , title: row.data().Title
                                , isActive: row.data().IsActive
                            },
                            success: function (data, textStatus, jqXHR) {
                                $("#modalPlace").html(data);
                            },
                            error: function (jqXHR, textStatus, errorThrown) {
                                alert("erorr");
                                alert(jqXHR);
                                alert(textStatus);
                            }
                        });
                });
            },
            "pagingType": "full_numbers",
            "lengthMenu": [
                [10, 25, 50, -1],
                [10, 25, 50, "All"]
            ],
            "columnDefs": [
                //{ "orderable": false, "targets": [1] }
            ],
            "serverSide": true,
            "processing": true,
            "ajax": {
                "url": "/BehaviouralCompetency/GetBehaviouralList",
                "type": "post",
                //"contentType": 'application/json; charset=utf-8',
                //"cache": false,
                "dataType": "json"
            },
            "aoColumns": [
                {
                    "mData": "Title"
                },
                { "mData": "jobTitle" },
                {
                    "mData": "IsActive",
                    "render": function (data, type, row, meta) {
                        if (data == 1) {
                            data = "<a class='btn activationCompetencyBtn' data-toggle='modal'><span class='label label-sm label-success'>فعال</span></a>";
                        } else if (data == 0) {
                            data = "<a class='btn activationCompetencyBtn' data-toggle='modal'><span class='label label-sm label-warning'>غیرفعال</span></a>";
                        }
                        return data;
                    }
                },
                {
                    "mData": null,
                    "render": function (data, type, row, meta) {
                        data = "<a href='#BehaviouralCompetency' data-toggle='modal' class='btn editCompetencyBtn' data-toggle='modal'><i class='fa fa-edit'></i></a>";
                        return data;
                    }
                },
                {
                    "mData": null,
                    "render": function (data, type, row, meta) {
                        data = "<a href='#' data-toggle='modal' class='deleteCompetencyBtn'><i class='fa fa-trash-o'></i></a>";
                        return data;
                    }
                },
                {
                    "class": "details-control",
                    "orderable": false,
                    "data": null,
                    "defaultContent": ""
                }
            ]
        });

    }

    show_dataTable();
</script>
}
