                //});
            },
            error: function (jqxhr, textstatus, errorthrown) {
                alert("erorr");
                alert(jqxhr);
                alert(textstatus);
            }
        });
    $('.select2').select2({
        placeholder: "انتخاب کنید",
        allowclear: true
    });

    $('.datepicker12from').datepicker({
        onSelect: function (dateText, inst) {
            $('.datepicker12to').datepicker('option', 'minDate', new JalaliDate(inst['selectedYear'], inst['selectedMonth'], inst['selectedDay']));
        },
        showWeek: true,
        showButtonPanel: true,
        changeMonth: true,
        changeYear: true,
        dateFormat: "yy/mm/dd"
    });
    $('.datepicker12from').datepicker("setDate", "today");
    $('.datepicker12to').datepicker({
        showWeek: true,
        showButtonPanel: true,
        changeMonth: true,
        changeYear: true,
        dateFormat: "yy/mm/dd"
    });

    $("#employeeStatusChangeSubmit").click(function () {
        //alert('dpCreationSubmit');
        var cause = $('#cause').children('option:selected').val();
        if (cause == '1' || cause == '') {
            //var postdata2 = $(this).serializeArray();
            debugger;
            var form = $('#employeeStatusChangeFrm');
            form.validate({
                //console.log($('#registerform').serializeArray());
                errorElement: 'span', //default input error message container
                errorClass: 'help-block', // default input error message class
                focusInvalid: false, // do not focus the last invalid input
                ignore: "",
                rules: {
                    cause: {
                        required: true
                    },
                    choiceEmployee: {
                        required: true
                    },
                    effectiveEndDateArrival: {
                        required: true
                    },
                    effectiveStartDateDeparture: {
                        required: true
                    },
                    choiceArrivalDepartment: {
                        required: true
                    },
                    choiceDepartureDepartment: {
                        required: true
                    },
                    DepartureDepartmentPositionType: {
                        required: true
                    },
                    positionId: {
                        required: true
                    }
                },
                messages: {
                    cause: {
                        required: "پر کردن این فیلد الزامی می باشد"
                    },
                    choiceEmployee: {
                        required: "پر کردن این فیلد الزامی می باشد"
                    },
                    effectiveEndDateArrival: {
                        required: "پر کردن این فیلد الزامی می باشد"
                    },
                    effectiveStartDateDeparture: {
                        required: "پر کردن این فیلد الزامی می باشد"
                    },
                    choiceArrivalDepartment: {
                        required: "پر کردن این فیلد الزامی می باشد"
                    },
                    choiceDepartureDepartment: {
                        required: "پر کردن این فیلد الزامی می باشد"
                    },
                    DepartureDepartmentPositionType: {
                        required: "پر کردن این فیلد الزامی می باشد"
                    },
                    positionId: {
                        required: "پر کردن این فیلد الزامی می باشد"
                    }
                },
                invalidHandler: function (event, validator) { //display error alert on form submit
                    //                    success2.hide();
                    //                    error2.show();
                    //                    App.scrollTo(error2, -200);
                },
                errorPlacement: function (error, element) { // render error placement for each input type
                    var icon = $(element).parent('.input-icon').children('i');
                    icon.removeClass('fa-check').addClass("fa-warning");
                    icon.attr("data-original-title", error.text()).tooltip();
                },
                highlight: function (element) { // hightlight error inputs
                    $(element)
                        .closest('.form-group').addClass('has-error'); // set error class to the control group
                },

                unhighlight: function (element) { // revert the change done by hightlight

                },

                success: function (label, element) {
                    var icon = $(element).parent('.input-icon').children('i');
                    $(element).closest('.form-group').removeClass('has-error').addClass('has-success'); // set success class to the control group
                    icon.removeClass("fa-warning").addClass("fa-check");
                },

                submitHandler: function (form) {
                    //                    success2.show();
                    //                    error2.hide();
                }
            })
            if (form.valid() == false) {
                //console.log($('#registerform').serializeArray());
                return false;
            } else {
                //$("#articleSubmit").addClass('disabled');
                $("#employeeStatusChangeSubmit").attr("disabled", "disabled");
                var btn = $("#employeeStatusChangeSubmit");
                btn.button('loading');
                //var postdata = new FormData(this);
                $("#positionType").prop("disabled", false);
                var postdata = $('#employeeStatusChangeFrm').serializeArray();
                $("#positionType").prop("disabled", true);
                console.log(postdata);
                $.ajax(
                    {
                        //data:postdata,
                        url: "/EvaluationHierarchy/EmployeeStatusChange",
                        //url : formURL,
                        //                        data: postdata2,
                        data: postdata,
                        //data: "firstName=" + $("fn").val(),
                        //cache: false,
                        //contentType: false,
                        //processData: false,
                        type: "post",

                        success: function (data, textStatus, jqXHR) {
                            //alert("success");
                            //alert("Good");
                            //if ($.trim(data) === "yess")
                            //alert("That's one I wanted. Excellent")
                            var message = "";
                            $(data).each(function (i, d) {
                                if (d.saveChangeResult > 0) {
                                    toastr.options.timeOut = "8000";
                                    toastr.options.positionClass = "toast-top-center";
                                    toastr.success("اطلاعات مورد نظر با موفقیت ثبت گردید.");
                                    //$('#treeview').jstree(true).refresh(true);
                                    $('#treeview').jstree("destroy");
                                    show_jstree();
                                }
                                if (d.withOutAssign != "") {
                                    message += "<span>اطلاعات آقای " + d.withOutAssign + "به دلیل اینکه تا به حال به هیچ واحدی انتصاب داده نشده ثبت نگردید</span><br>";
                                }
                                if (d.preventTwoPrimaryPosition != "") {
                                    message += "<span>اطلاعات آقای " + d.preventTwoPrimaryPosition + "به دلیل عدم انتصاب یک نفر به دو واحد اصلی ثبت نگردید</span><br>";
                                }
                                if (d.preventLossPrimaryPosition != "") {
                                    message += "<span>اطلاعات آقای " + d.preventTwoPrimaryPosition + "به دلیل اینکه هر کارمند حتما باید یک واحد اصلی داشته باشد ثبت نگردید</span><br>";
                                }
                                if (d.duplicate != "") {
                                    message += "<span>اطلاعات آقای " + d.duplicate + "به دلیل تکراری بودن(به واحد مورد نظر قبلا انتصاب داده شده) ثبت نگردید</span><br>";
                                }
                                if (d.singleDepartment != "") {
                                    message += "<span>اطلاعات آقای " + d.singleDepartment + "به دلیل اینکه فقط 1 کارمند را می توان به واحد مورد نظر انتصاب داد ثبت نگردید</span><br>";
                                }
                                if (d.departmentSupervisor != "") {
                                    message += "<span>اطلاعات آقای " + d.departmentSupervisor + "به دلیل اینکه در واحد مبداء مسئول می باشند ثبت نگردید (در قسمت تغیر مسئول ، مسئول جدید را مشخص نمایید )</span><br>";
                                }
                            });
                            if (message != "") {
                                toastr.options.timeOut = "15000";
                                toastr.options.positionClass = "toast-top-center";
                                toastr.info(message);
                            }
                            $("#employeeStatusChangeFrm")[0].reset();
                            $("#employee_status_change").modal("hide")
                            //resetFormValidation();
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            alert("erorr");
                            alert(jqXHR);
                            alert(textStatus);
                        }
                    }).always(function () {
                        $("#employeeStatusChangeSubmit").button('reset');
                    });
                //$.getScript('/assets/javascript/articleForm.js', function () {
                //    ArticleForm.init(postdata);
                //    $("#articleForm")[0].reset();
                //});
                // e.preventDefault(e);
            }
        }
    });

    $.ajax({
        type: 'get',
        url: '/EvaluationHierarchy/GetCurrentPEmployee',
        //data: { roleid: roleid },
        async: false,
        success: function (people2) {
            //alert(people2);
            $("#choiceEmployee").empty();
            $("#choiceEmployee").append("<option></option>");
            $(people2).each(function (i, p2) {
                $("#choiceEmployee").append("<option value='" + p2.PeopleId + "'>" + p2.FirstName + " " + p2.LastName + "(" + p2.UserName + ")</option>");
            });

        },
        error: function (status) {
            alert("error");
        }
    })
    $.ajax({
        type: 'get',
        url: '/EvaluationHierarchy/GetDepartment',
        //data: { roleId: roleId },
        success: function (department) {
            $("#choiceDepartureDepartment").empty();
            $("#choiceDepartureDepartment").append("<option></option>");
            debugger;

            $(department).each(function (i, d) {
                //$("#selectedDepartment").select2("val", d.departmentId);
                $("#choiceDepartureDepartment").append("<option value='" + d.departmentId + "'>" + d.shortName + "</option>");
            })
        },
        error: function (status) {
            alert("Error");
        }
    })
    $.ajax({
        type: 'get',
        url: '/EvaluationHierarchy/GetPositionList',
        //data: { roleId: roleId },
        success: function (people) {
            $("#positionId").empty();
            $("#positionId").append("<option></option>");
            debugger;

            $(people).each(function (i, p) {
                $("#positionId").append("<option value='" + p.jobId + "'>" + p.title + "</option>");
            })
        },
        error: function (status) {
            alert("Error");
        }
    })
    $('#choiceEmployee').on('change', function () {
        $.ajax({
            type: 'post',
            url: '/EvaluationHierarchy/GetArrivalDepartments',
            data: { peopleId: $('#choiceEmployee').children('option:selected').val() },
            success: function (data) {
                $("#choiceArrivalDepartment").empty();
                $("#choiceArrivalDepartment").append("<option></option>");
                $("#choiceArrivalDepartment").select2("val", "");
                $(data).each(function (i, d) {
                    //$("#selectedDepartment").select2("val", d.departmentId);
                    $("#choiceArrivalDepartment").append("<option value='" + d.departmentId + "'>" + d.shortName + "</option>");
                })
            },
            error: function (status) {
                alert("Error");
            }
        })
    });

    $('#choiceArrivalDepartment').on('change', function () {
        $.ajax({
            type: 'post',
            url: '/EvaluationHierarchy/GetPositionType',
            data: {
                departmentId: $('#choiceArrivalDepartment').children('option:selected').val(),
                peopleId: $('#choiceEmployee').children('option:selected').val()
            },
            success: function (data) {
                $("#positionType").prop("disabled", false);
                if (data.positionType == 1) {
                    $("#positionType").append("<option value='" + data.positionType + "'>اصلی</option>");
                    $("#positionType").select2("val", data.positionType);
                } else if (data.positionType == 2) {
                    $("#positionType").append("<option value='" + data.positionType + "'>فرعی</option>");
                    $("#positionType").select2("val", data.positionType);
                }
                $("#positionType").prop("disabled", true);
            },
            error: function (status) {
                alert("Error");
            }
        })
    });
</script>
