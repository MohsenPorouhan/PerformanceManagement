<script>
    $('#employee_status_change').modal('show');
    $(".modal-dialog").draggable({
        handle: ".modal-header"
    });
    $(".modal-header").css("cursor", "move");
    $.ajax(
        {
            url: "/EvaluationHierarchy/EmployeeStatusChangeOtherCausePartial",
            contenttype: 'aplication/json;charset=utf-8',
            type: "get",
            datatype: 'html',

            success: function (data, textstatus, jqxhr) {
                debugger;
                //$("#department_creation").html(data);
                $("#EmployeeStatusChangeOtherCauseHolder").html(data);

                //$.getscript('/assets/scripts/core/app.js', function () {
