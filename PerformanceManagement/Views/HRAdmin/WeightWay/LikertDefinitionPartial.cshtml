<script>
    $(document).ready(function () {

        $('#likert_definition').modal('show');
        var updated = [];
        var old = [];
        $('#tagEditorCompetency').tagEditor({
            placeholder: 'آیتم های مورد نظر...',
            onChange: function (field, editor, tags) {
                $('#response').prepend(
                    'Tags changed to: ' + (tags.length ? tags.join(', ') : '----') + '<hr>'
                    //indexOf()
                );

            },
            beforeTagSave: function (field, editor, tags, tag, val) {

                $('#response').prepend('Tag ' + val + ' saved' + (tag ? ' over ' + tag : '') + '.');
                if (tag != "") {

                    updated[updated.length] = val;
                    old[old.length] = tag;
                    console.log(updated);
                    console.log(old);
                    for (var i in updated) {
                        for (var j in old) {
                            if (updated[i] == old[j]) {
                                updated[i] = val;
                                delete old[j];
                                delete updated[updated.length - 1];
                            }
                        }
                    }
                    console.log(updated);
                    console.log(old);
                }
            },
            beforeTagDelete: function (field, editor, tags, val) {
                var q = confirm('Remove tag "' + val + '"?');
                if (q) $('#response').prepend('Tag ' + val + ' deleted.');
                else $('#response').prepend('Removal of ' + val + ' discarded.');
                return q;
            }
        });
        $('#tagEditorTask').tagEditor({
            placeholder: 'آیتم های مورد نظر...'
        });
        $('#tagEditorScore').tagEditor({
            placeholder: 'آیتم های مورد نظر...'
