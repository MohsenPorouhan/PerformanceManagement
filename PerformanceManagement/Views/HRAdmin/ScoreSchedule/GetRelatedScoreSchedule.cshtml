@{
    Layout = null;
}
@model List<RelatedScoreScheduleView>
<table class="table table-striped table-bordered table-hover" id="sample_dt">
    <thead>
        <tr>
            <th id="th1" hidden>
                periodDefinitionId
            </th>
            <th id="th1" hidden>
                ScoreScheduleId
            </th>
            <th id="th2">
                نوع ارزیاب
            </th>
            <th id="th3">
                تاریخ شروع
            </th>
            <th id="th4">
                تاریخ پایان
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            var datefrom = "";
            var dateTo = "";

            PerformanceManagement.Util.DateTimeCustom dateTimeCustom = new PerformanceManagement.Util.DateTimeCustom();
        }
        @foreach (var item in Model)
        {
            datefrom = dateTimeCustom.MiladiToShamsi(item.DateFrom.Date).Substring(0, 11); ;
            dateTo = dateTimeCustom.MiladiToShamsi(item.DateTo.Date).Substring(0, 11);

            <tr>
                <td hidden>@item.PeriodDefinitionId</td>
                <td hidden>@item.ScoreScheduleId</td>
                <td>@item.Title</td>
                <td>@datefrom</td>
                <td>@dateTo</td>
            </tr>
        }

    </tbody>
</table>
