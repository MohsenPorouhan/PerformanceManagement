@{
    Layout = null;
}
@model RelatedTaskView

@if (ViewBag.parentTaskId != null)
{
    <table class="table table-striped table-bordered table-hover" id="sample_dt">
        <thead>
            <tr>
                <th id="th1">
                    نام هدف
                </th>
                <th id="th2">
                    نوع
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                string type = "";
            }
            @switch (Model.Type)
            {
                case 1:
                    type = "سازمانی";
                    break;
                case 2:
                    type = "معاونتی";
                    break;
                default:
                    break;
            }
            <tr>
                <td>@Model.Title</td>
                <td>@type</td>
            </tr>
        </tbody>
    </table>
}
else
{
    <span>هدف مورد نظر در راستای هدف دیگر نمی باشد.</span>
}