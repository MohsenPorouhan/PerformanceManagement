@{
    Layout = null;
}
<div class="modal fade" id="addCriteriaModal" tabindex="" aria-hidden="true">
    <div class="modal-dialog modal-wide">
        <div class="modal-content">
            <div class="modal-header bg-blue">
                <button type="button" id="modal-close" class="close"
