@{
    Layout = null;
}
@model List<CoacherTruthView>
<table class="table table-striped table-bordered table-hover" id="sample_dt">
    <thead>
        <tr>
            <th id="th1" hidden>
                behaviouralCompetencyId
            </th>
            <th id="th1" hidden>
                truthId
            </th>
            <th id="th2">
                نام مصداق
            </th>
            <th>
                ایجاد کننده
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td hidden>@item.BehaviouralCompetencyId</td>
                <td hidden>@item.TruthId</td>
                <td>@item.Title</td>
                @{
                    var type = "";

                    switch (item.Type)
                    {
                        case "admin":
                            type = "ادمین";
                            break;
                        case "coacher":
                            type = "مربی";
                            break;
                        default:
                            break;
                    }
                }
                <td>
                    @type
                </td>
            </tr>
        }

    </tbody>
</table>
