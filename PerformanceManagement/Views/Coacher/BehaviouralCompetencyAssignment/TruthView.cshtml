@{
    Layout = null;
}
@model List<TruthView>
<div class="panel-body" id="scoreTbl_@ViewBag.index">
    <table class="table table-striped table-bordered table-hover" id="sample_dt">
        <thead>
            <tr>
                <th id="th1">
                    نام مصداق
                </th>
                <th id="th2">
                    ایجاد کننده
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var creator = "";
                <tr>
                    <td>@item.TruthTitle</td>
                    @switch (item.Creator)
                    {
                        case "HRAdmin":
                            creator = "ادمین سرمایه انسانی";
                            break;
                        case "Coacher":
                            creator = "مربی";
                            break;
                        default:
                            break;
                    }
                    <td>@creator</td>
                </tr>
            }

        </tbody>
    </table>
</div>
