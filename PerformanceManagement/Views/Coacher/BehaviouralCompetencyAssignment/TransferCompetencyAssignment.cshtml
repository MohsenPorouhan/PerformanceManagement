<script>
    $("#competencyTransfer_assign").modal("show");
    $('.select2-2').select2({
        placeholder: "انتخاب کنید",
        allowClear: true
    });
    var clicked = false;
    //$("#taskAssignmentBtn").click(function () {
    $.ajax({
        type: 'get',
        url: '/TaskAssignment/GetDepartmentSupervisorList',
        async: false,
        //data: { roleId: roleId },
        success: function (department) {
