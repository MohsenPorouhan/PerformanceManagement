    Layout = null;
}

<form method="post" id="scoreCompetencyAssignmentFrm" class="form-horizontal">
    <div class="modal fade department modalClass" id="scoreCompetencyAssignmentModal" tabindex="" aria-hidden="true" data-backdrop="static">
