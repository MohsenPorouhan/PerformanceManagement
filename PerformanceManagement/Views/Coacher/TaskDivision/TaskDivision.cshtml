@section Scripts{

<script>


    function format(d) {
        var r;
        $.ajax({
            url: "/TaskDivision/GetSubTaskList",
            type: "POST",
            data: { taskId: d.TaskId, hierarchyId: d.RecieverAllocationEvaluationHierarchyId },
            async: false,
            dataType: "html",
            success: function (result) {
                r = result;
            }
        });
        return r;
    }
    var dt;
    function show_dataTable() {
        dt = $('#taskAssignmentTable').DataTable({
            dom: 'CT<"clearfix">lBfrtip',
            buttons: [
                'copy', 'csv', 'excel',
                'pdf',
                {
                    extend: 'pdfHtml5',
                    download: 'open',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'print',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                'colvis'
            ],
            columnDefs: [
                {
                    targets: [-1],
                    visible: false
                }
            ],
            "fnInitComplete": function (oSettings, json) {

            },
            "fnDrawCallback": function (oSettings) {

                $('.taskDivisionBtn').on('click', function () {
                    var tr = $(this).closest('tr');
                    var row = dt.row(tr);
                    $.ajax({
                        type: 'get',
                        url: '/TaskDivision/AddTaskDivision',
                        async: false,
                        data: { periodDefinitionId: row.data().PeriodDefinitoionId, departmentId: row.data().RecieverAllocationEvaluationHierarchyId },
                        success: function (data) {
                            $("#modalPlace").html(data);
                        },
                        error: function (status) {
                            alert("Error");
                        }
                    })
                    $("#taskDivisionSubmit").trigger('click');
                    $("#taskId").empty();
                    $("#taskId").append("<option value='" + row.data().TaskId + "'>" + row.data().Title + "</option>");
                    $("#hierarchyId").val(row.data().RecieverAllocationEvaluationHierarchyId)
                    $("#addSubTask").trigger('click');
                    //if (!submitClicked) {
                    //    $("#taskDivisionSubmit").trigger('click');
                    //    submitClicked = true;
                    //}
                })

                // Array to track the ids of the details displayed rows
                var detailRows = [];
                $('.details-control').on('click', function () {
                    var tr = $(this).closest('tr');
                    var row = dt.row(tr);
                    var idx = $.inArray(tr.attr('id'), detailRows);

                    if (row.child.isShown()) {
                        tr.removeClass('details');
                        row.child.hide();

                        // Remove from the 'open' array
                        detailRows.splice(idx, 1);
                    }
                    else {
                        tr.addClass('details');
                        row.child(format(row.data())).show();

                        // Add to the 'open' array
                        if (idx === -1) {
                            detailRows.push(tr.attr('id'));
                        }
                    }
                });
                // On each draw, loop over the `detailRows` array and show any child rows
                dt.on('draw', function () {
                    $.each(detailRows, function (i, id) {
                        $('#' + id + ' td.details-control').trigger('click');
                    });
                });
            },
            "pagingType": "full_numbers",
            "lengthMenu": [
                [10, 25, 50, -1],
                [10, 25, 50, "All"]
            ],
            "columnDefs": [
                { "orderable": false, "targets": [0] }
            ],
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": "/TaskDivision/GetAssignedTaskList",
                "type": "Post",
                "data": function (d) {
                    d.departmentId2 = $('#departmentId').children('option:selected').val(),
                        d.periodDefinitionIdDT2 = $('#periodDefinitionIdDT').children('option:selected').val()
                },
                //"contentType": 'application/json; charset=utf-8',
                //"cache": false,
                "dataType": "json",
                //'data': function (data) {
                //    data = JSON.stringify(data)
                //    return data;
                //}
            },
            "aoColumns": [
                {
                    "mData": "PeriodCode",
                },
                {
                    "mData": "PeriodTitle"
                },
                {
                    "mData": "AllocatorFullName"
                },
                {
                    "mData": "allocatorRoleName",
                    "render": function (data, type, row, meta) {
                        if (data == "PlanningAdmin") {
                            data = 'ادمین برنامه ریزی'
                        }
                        else if (data == "Coacher") {
                            data = 'مربی'
                        }
                        else if (data == "HRAdmin") {
                            data = 'ادمین سرمایه انسانی'
                        }
                        return data;
                    }
                },
                {
                    "mData": "AllocatorDepartmentName"
                },
                {
                    "mData": "ShortName"
                },
                {
                    "mData": "Type",
                    "render": function (data, type, row, meta) {
                        if (data == "1") {
                            data = 'هدف'
                        }
                        else if (data == "2") {
                            data = 'KPI'
                        }
                        else if (data == "3") {
                            data = 'برنامه عملیاتی'
                        }
                        return data;
                    }
                },
                {
                    "mData": "Title"
                },
                {
                    "mData": "TaskWeight"
                },
                {
                    "mData": null,
                    "render": function (data, type, row, meta) {
                        data = "<a href='#' data-toggle='modal' class='taskDivisionBtn btn default btn-block disabled'>شکست به زیر فعالیت</a>";
                        return data;
                    }
                },
                {
                    "class": "details-control",
                    "orderable": false,
                    "data": null,
                    "defaultContent": ""
                }
            ]
        });

    }

    show_dataTable();

    $("#taskAssignmentTable_filter").after("<div class='dataTables_filter col-md-3'><label>انتخاب رده سازمانی:<select name='departmentId' id='departmentId' class='form-control input-medium'></select></label></div>");

    $("#taskAssignmentTable_filter").after("<div class='dataTables_filter'><label>انتخاب دوره:<select name='periodDefinitionIdDT' id='periodDefinitionIdDT' class='form-control input-medium'></select></label></div>");

    $("#taskAssignmentTable_filter").after("<div class='clearfix'></div>");

    $.ajax({
        type: 'get',
        url: '/share/GetPeriodDefinitionList',
        //data: { roleId: roleId },
        success: function (periodDefinition) {
            $("#periodDefinitionIdDT").empty();
            //$("#periodDefinitionIdDT").append("<option></option>");
            var max = 0;
            $(periodDefinition).each(function (i, p) {
                //$("#parentName").select2("val", d.departmentId);
                if (p.periodDefinitoionId > max) {
                    max = p.periodDefinitoionId;
                }
                $("#periodDefinitionIdDT").append("<option value='" + p.periodDefinitoionId + "'>" + p.periodTitle + " (" + p.periodCode + ")</option>");
            })
            $("#periodDefinitionIdDT").val(max);
            $('#periodDefinitionIdDT').trigger('change');
        },
        error: function (status) {
            alert("Error");
        }
    })

    $('#periodDefinitionIdDT').on('change', function () {
        if ($('#periodDefinitionIdDT').children('option:selected').val() == "" && $('#departmentId').children('option:selected').val() != "") {
            dt.ajax.url("/TaskDivision/GetAssignedTaskList");
            dt.ajax.reload();
        }
        $.ajax({
            type: 'get',
            url: '/TaskDivision/GetDepartmentList',
            data: { periodDefinitionId: $('#periodDefinitionIdDT').children('option:selected').val() },
            success: function (periodDefinition) {
                $("#departmentId").empty();
                $("#departmentId").append("<option></option>");

                $(periodDefinition).each(function (i, p) {
                    //$("#parentName").select2("val", d.departmentId);
                    $("#departmentId").append("<option value='" + p.recieverAllocationEvaluationHierarchyId + "'>" + p.shortName + "</option>");
                })
            },
            error: function (status) {
                alert("Error");
            }
        })
    });

    $('#departmentId').on('change', function () {
        dt.ajax.url("/TaskDivision/GetAssignedTaskList");
        dt.ajax.reload();
    })

    function getCriterias(taskId, periodDefinitionId, departmentId) {
        $.ajax({
            type: 'get',
            url: '/TaskDivision/GetCriterias',
            data: { taskId: taskId, periodDefinitionId: periodDefinitionId, departmentId: departmentId },
            success: function (data) {
                $("#modalPlace").html(data);
            },
            error: function (status) {
                alert("Error");
            }
        })
    }
    var criteriaIdd, periodDefinitionIdd, departmentIdd, criteriaTitlee;
    function deleteCriteria(criteriaId, periodDefinitionId, departmentId, criteriaTitle) {
        criteriaIdd = criteriaId;
        periodDefinitionIdd = periodDefinitionId;
        departmentIdd = departmentId;
        criteriaTitlee = criteriaTitle;
        $("#criteriasModal").modal('hide');
        $.ajax({
            type: 'get',
            url: '/TaskDivision/DeleteCriteria',
            data: {
                criteriaId: criteriaIdd, periodDefinitionId: periodDefinitionIdd, departmentId: departmentIdd
            },
            async: true,
            success: function (data) {

                $("#modalPlace").html(data);
            },
            error: function (status) {
                alert("Error");
            }
        })
    }

    function updateSubTaskAndCriterias(taskId, periodDefinitionId, departmentId) {
        $.ajax({
            type: 'get',
            url: '/TaskDivision/UpdatetSubTaskAndCriterias',
            data: { taskId: taskId, periodDefinitionId: periodDefinitionId, departmentId: departmentId },
            success: function (data) {
                if (data == 0) {
                    toastr.options.timeOut = "15000";
                    toastr.options.positionClass = "toast-top-center";
                    toastr.info("برای زیر فعالیت مورد نظر شاخصی تعریف نشده");
                } else {
                    $("#modalPlace").html(data);
                }
            },
            error: function (status) {
                alert("Error");
            }
        })
    }

    function deleteSubTask(taskIdd, periodDefinitionIdd, departmentIdd, taskTitlee) {
        $.ajax({
            type: 'get',
            url: '/TaskDivision/DeleteSubTask',
            data: {
                taskId: taskIdd, periodDefinitionId: periodDefinitionIdd, departmentId: departmentIdd, taskTitle: taskTitlee
            },
            async: true,
            success: function (data) {

                $("#modalPlace").html(data);
            },
            error: function (status) {
                alert("Error");
            }
        })
    }
</script>
}
