<!-- BEGIN LOGIN FORM -->
<form class="login-form" id="login" method="post">
    <h3 class="form-title">ورود به حساب کاربری</h3>
    <div class="alert alert-danger display-hide">
        <button class="close" data-close="alert"></button>
        <span>
            نام کاربری و رمز عبور خود را وارد نمایید.
        </span>
    </div>
    @*<div class="alert alert-danger">
            <span>
                جهت تست مدیریت فاوا و مدیریت منابع انسانی
            </span>
        </div>*@
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">Username</label>
        <div class="input-icon">
            <i class="fa fa-user"></i>
            <input class="form-control placeholder-no-fix" type="text" id="Email" autocomplete="off" placeholder="نام کاربری" name="Email" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Password</label>
        <div class="input-icon">
            <i class="fa fa-lock"></i>
            <input class="form-control placeholder-no-fix" id="password" type="password" autocomplete="off" placeholder="کلمه عبور" name="Password" />
        </div>
    </div>
    <div class="form-actions">
        @*<label class="checkbox">
                <input type="checkbox" name="RememberMe" /> مرا بیاد آور
            </label>*@
        <label class="checkbox" asp-for="RememberMe">
            <input asp-for="RememberMe" />
            @Html.DisplayNameFor(m => m.RememberMe)
        </label>

        <button type="submit" id="submitBtn" class="btn blue pull-right">
            ورود <i class="m-icon-swapright m-icon-white"></i>
        </button>
    </div>
