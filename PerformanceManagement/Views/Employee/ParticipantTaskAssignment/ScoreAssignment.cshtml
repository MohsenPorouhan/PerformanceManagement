        });

        $("#assignScoreBTN").trigger('click');
        if (isTrue) {
            //("#taskScore0").val(taskScore0Value);
            $("#taskScore0").attr("disabled", "disabled");
            $("#taskScore0").prev().remove();
        }
        //End of validation of form
