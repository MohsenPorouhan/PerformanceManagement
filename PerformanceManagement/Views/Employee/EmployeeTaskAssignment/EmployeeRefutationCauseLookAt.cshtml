@{
    Layout = null;
}
<div class="modal fade modalClass" id="refutationCauseLookAtModal" tabindex="" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header bg-blue">
                <button type="button" id="modal-close" class="close"
                        data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">
                    <i class="fa fa-file-o"></i>
                    مشاهده علت عدم تایید تفاهم @ViewBag.Title
                </h4>
            </div>

            <div class="modal-body">
                <div class="form-body">
                    <div class="note note-danger">
                        @*<h4 class="block"></h4>*@
                        <p>
                            @ViewBag.RefutationCause
                        </p>
                    </div>
                </div>
                <!-- END FORM-->
            </div>

            <div class="modal-footer">
                <button type="button" class="btn green input-sm input-small" data-dismiss="modal"><i class="fa fa-times"></i>بستن</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<script>
    $('#refutationCauseLookAtModal').modal('show');
</script>