@{
    Layout = null;
}
@model List<CriteriaDetailsView>
@if (Model.Count != 0 && ViewBag.RoleId != Model.FirstOrDefault().RoleId && ViewBag.HRAdminRoleId != Model.FirstOrDefault().RoleId)
{
    <table class="table table-striped table-bordered table-hover" id="sample_dt">
        <thead>
            <tr>
                <th id="th1" hidden>
                    taskId
                </th>
                <th id="th1" hidden>
                    criteriaId
                </th>
                <th id="th2">
                    نام شاخص
                </th>
                <th>
                    نحوه محاسبه
                </th>
                <th>
                    حد پذیرش
                </th>
                <th hidden>
                    criteriaWeightId
                </th>
                <th>
                    وزن
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td hidden>@item.TaskId</td>
                    <td hidden>@item.CriteriaId</td>
                    <td>@item.Title</td>
                    <td>@item.CalculationWay</td>
                    <td>
                        @item.limitOfAdmission
                    </td>
                    <td hidden>
                        @item.CriteriaWeightId
                    </td>
                    <td>
                        @item.Weight
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else if (Model.Count != 0 && ViewBag.RoleId == Model.FirstOrDefault().RoleId)
{
    <table class="table table-striped table-bordered table-hover" id="sample_dt">
        <thead>
            <tr>
                <th id="th1" hidden>
                    taskId
                </th>
                <th id="th1" hidden>
                    criteriaId
                </th>
                <th id="th2">
                    نام شاخص
                </th>
                <th>
                    نوع شاخص
                </th>
                <th>
                    نحوه محاسبه
                </th>
                <th>
                    حد پذیرش
                </th>
                <th hidden>
                    criteriaWeightId
                </th>
                <th>
                    وزن
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td hidden>@item.TaskId</td>
                    <td hidden>@item.CriteriaId</td>
                    <td>@item.Title</td>
                    <td>@item.CriteriaType</td>
                    <td>@item.CalculationWay</td>
                    <td>
                        @item.limitOfAdmission
                    </td>
                    <td hidden>
                        @item.CriteriaWeightId
                    </td>
                    <td>
                        @item.Weight
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else if (Model.Count != 0 && ViewBag.HRAdminRoleId == Model.FirstOrDefault().RoleId)
{
    <span>@Model.FirstOrDefault().Description</span>
}
else if (Model.Count == 0)
{
    <span>شاخصی تعریف نشده</span>
}