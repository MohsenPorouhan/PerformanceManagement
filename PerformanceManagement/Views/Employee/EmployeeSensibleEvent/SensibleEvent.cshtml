@section Scripts{
<script>
    $("#addSensibleEventBtn").click(function () {
        $.ajax(
            {
                url: "/EmployeeSensibleEvent/AddSensibleEvent",
                contentType: 'aplication/json;charset=utf-8',
                type: "GET",
                datatype: 'html',

                success: function (data, textStatus, jqXHR) {
                    $("#modalPlace").html(data);
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert("erorr");
                    alert(jqXHR);
                    alert(textStatus);
                }
            });
    });
    function relatedTaskCompetency(d) {
        var r;
        $.ajax({
            url: "/EmployeeSensibleEvent/GetRelatedTaskCompetencyList",
            type: "POST",
            data: { sensibleEventId: d.SensibleEventId },
            async: false,
            dataType: "html",
            success: function (result) {
                r = result;
            }
        });
        return r;
    }
    var dt;
    function show_dataTable() {
        dt = $('#sensibleEventTbl').DataTable({
            dom: 'CT<"clearfix">lBfrtip',
            buttons: [
                'copy', 'csv', 'excel',
                'pdf',
                {
                    extend: 'pdfHtml5',
                    download: 'open',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'print',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                'colvis'
            ],
            columnDefs: [
                {
                    targets: [-1],
                    visible: false
                }
            ],
            "fnInitComplete": function (oSettings, json) {

            },
            "fnDrawCallback": function (oSettings) {

                // Array to track the ids of the details displayed rows
                var detailRows = [];
                $('.details-control').on('click', function () {
                    var tr = $(this).closest('tr');
                    var row = dt.row(tr);
                    var idx = $.inArray(tr.attr('id'), detailRows);

                    if (row.child.isShown()) {
                        tr.removeClass('details');
                        row.child.hide();

                        // Remove from the 'open' array
                        detailRows.splice(idx, 1);
                    }
                    else {
                        tr.addClass('details');
                        row.child(relatedTaskCompetency(row.data())).show();

                        // Add to the 'open' array
                        if (idx === -1) {
                            detailRows.push(tr.attr('id'));
                        }
                    }
                });
                // On each draw, loop over the `detailRows` array and show any child rows
                dt.on('draw', function () {
                    $.each(detailRows, function (i, id) {
                        $('#' + id + ' td.details-control').trigger('click');
                    });
                });
            },
            "pagingType": "full_numbers",
            "lengthMenu": [
                [10, 25, 50, -1],
                [10, 25, 50, "All"]
            ],
            "columnDefs": [
                { "orderable": false, "targets": [0] }
            ],
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": "/EmployeeSensibleEvent/GetSensibleEventList",
                "type": "Post",
                "data": function (d) {
                    d.periodDefinitionIdDT = $('#periodDefinitionIdDT').children('option:selected').val(),
                        d.departmentIdDT = $('#departmentId').children('option:selected').val()
                },
                //"contentType": 'application/json; charset=utf-8',
                //"cache": false,
                "dataType": "json",
                //'data': function (data) {
                //    data = JSON.stringify(data)
                //    return data;
                //}
            },
            "aoColumns": [
                {
                    "mData": "Title",
                },
                {
                    "mData": "Description",
                },
                {
                    "mData": "EventType",
                    "render": function (data, type, row, meta) {
                        if (data == 1) {
                            data = "مثبت";
                        } else if (data == 2) {
                            data = "منفی";
                        }
                        return data;
                    }
                },
                {
                    "mData": "SensibleEventDate",
                    "render": function (data, type, row, meta) {
                        data = moment(data, 'YYYY/MM/DD').locale('fa').format('YYYY/MM/DD');
                        return data;
                    }
                },
                {
                    "mData": "FileName",
                    "render": function (data, type, row, meta) {
                        if (data != null) {
                            data = "<a href='/employeeUploads/" + row.FilePath + "' target='_blank'>" + row.FileName + "</a>";
                        } else if (data == null) {
                            data = "پیوست ندارد";
                        }
                        return data;
                    }
                },
                {
                    "class": "details-control",
                    "orderable": false,
                    "data": null,
                    "defaultContent": ""
                }
            ]
        });
    }
    show_dataTable();

    $("#sensibleEventTbl_filter").after("<div id='departmentIdDT' class='dataTables_filter input-DT'><label>رده سازمانی:<select name='departmentId' id='departmentId' class='form-control input-medium'></select></label></div>");

    $("#sensibleEventTbl_filter").after("<div class='dataTables_filter input-DT'><label>دوره:<select name='periodDefinitionIdDT' id='periodDefinitionIdDT' class='form-control input---medium'></select></label></div>");

    $("#sensibleEventTbl_filter").after("<div class='clearfix'></div>");

    $.ajax({
        type: 'get',
        url: '/share/GetPeriodDefinitionList',
        //data: { roleId: roleId },
        success: function (periodDefinition) {
            $("#periodDefinitionIdDT").empty();
            //$("#periodDefinitionIdDT").append("<option></option>");
            var max = 0;
            $(periodDefinition).each(function (i, p) {
                //$("#parentName").select2("val", d.departmentId);
                if (p.periodDefinitoionId > max) {
                    max = p.periodDefinitoionId;
                }
                $("#periodDefinitionIdDT").append("<option value='" + p.periodDefinitoionId + "'>" + p.periodTitle + " (" + p.periodCode + ")</option>");
            })
            $("#periodDefinitionIdDT").val(max);
            $('#periodDefinitionIdDT').trigger('change');
        },
        error: function (status) {
            alert("Error");
        }
    })
    $('#periodDefinitionIdDT').on('change', function () {
        $.ajax({
            type: 'get',
            url: '/EmployeeTaskAssignment/GetDepartmentList',
            //data: { periodDefinitionId: $('#periodDefinitionIdDT').children('option:selected').val() },
            success: function (DepartmentResponsibilty) {

                $("#departmentId").empty();
                $("#departmentId").append("<option></option>");
                //dt.ajax.url("/ParticipantTaskAssignment/GetAssignedTaskList");
                //dt.ajax.reload();
                $(DepartmentResponsibilty).each(function (i, p) {
                    //$("#parentName").select2("val", d.departmentId);
                    $("#departmentId").append("<option value='" + p.EvaluationHierarchyId + "'>" + p.ShortName + "</option>");
                    if (p.PositionType == 1) {
                        $("#departmentId").val(p.EvaluationHierarchyId);
                        $("#departmentId").trigger('change');
                    }
                })
            },
            error: function (status) {
                alert("Error");
            }
        })
    });
    $('#departmentId').on('change', function () {
        dt.ajax.url("/EmployeeSensibleEvent/GetSensibleEventList");
        dt.ajax.reload();
    });

